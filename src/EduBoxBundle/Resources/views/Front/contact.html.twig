{% extends '@EduBox/front_layout.html.twig' %}

{% set title = 'Habarlaşmak' %}

{% block front_title %}{{  parent() }} / {{ title }}{% endblock %}

{% block front_content %}
    <div class="col-md-6">

        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Habarlaşmak üçin forma</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form>
                <div class="box-body">
                    <div class="form-group">
                        <label>Adyňyz</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Elektron poçta</label>
                        <input type="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Tema</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Hatyňyz</label>
                        <textarea class="form-control" style="resize: vertical" rows="12"></textarea>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary pull-right">Ibermek</button>
                </div>
                <!-- /.box-footer -->
            </form>
        </div>
    </div>
{% endblock %}